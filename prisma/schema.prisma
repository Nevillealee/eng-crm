generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id @default(cuid())
  firstName     String?
  lastName      String?
  name          String?
  email         String    @unique
  isAdmin       Boolean   @default(false) @map("is_admin")
  city          String?
  skills        String[]  @default([])
  availabilityStatus String? @map("availability_status")
  availabilityNote   String? @map("availability_note")
  upcomingHolidays   Json?   @map("upcoming_holidays")
  onboardingCompleted Boolean @default(false) @map("onboarding_completed")
  onboardingStep      Int     @default(1) @map("onboarding_step")
  emailVerified DateTime?
  image         String?
  avatar        Bytes?
  avatarMimeType String? @map("avatar_mime_type")
  password      String
  resetPasswordToken String? @unique @map("reset_password_token")
  resetPasswordExpires DateTime? @map("reset_password_expires")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  lastLogin     DateTime? @map("last_login")
  lastLoginIp   String?   @map("last_login_ip")
  monthlySalaryPhp Int?   @map("monthly_salary_php")
  salaryNotes   String?   @map("salary_notes")
  projectMemberships ProjectMembership[]
  accounts      Account[]
  sessions      Session[]
  adminAuditLogs AdminAuditLog[]

  @@map("users")
}

enum ProjectStatus {
  ongoing
  completed
  archived
}

model Project {
  id          String              @id @default(cuid())
  name        String
  clientName  String              @map("client_name")
  costPhp     Int                 @default(0) @map("cost_php")
  currencyCode String             @default("PHP") @map("currency_code")
  status      ProjectStatus       @default(ongoing)
  startDate   DateTime            @map("start_date")
  endDate     DateTime?           @map("end_date")
  adminNotes  String?             @map("admin_notes")
  createdAt   DateTime            @default(now()) @map("created_at")
  updatedAt   DateTime            @updatedAt @map("updated_at")
  memberships ProjectMembership[]

  @@map("projects")
}

model ProjectMembership {
  projectId     String   @map("project_id")
  userId        String   @map("user_id")
  roleOnProject String?  @map("role_on_project")
  assignedAt    DateTime @default(now()) @map("assigned_at")
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([projectId, userId])
  @@index([userId])
  @@map("project_memberships")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model AdminAuditLog {
  id          String   @id @default(cuid())
  actorUserId String?  @map("actor_user_id")
  actorEmail  String?  @map("actor_email")
  action      String
  targetType  String   @map("target_type")
  targetId    String?  @map("target_id")
  summary     String
  metadata    Json?
  createdAt   DateTime @default(now()) @map("created_at")
  actor       User?    @relation(fields: [actorUserId], references: [id], onDelete: SetNull)

  @@index([createdAt])
  @@index([targetType, targetId])
  @@map("admin_audit_logs")
}
